reverse=0
while getopts "n" args $OPTIONS
do
	case "$args" in
        n)      reverse=1
		shift
                ;;
 	esac
done

if [ $reverse -eq 1 ]
then
	echo Check No Propagation $*
else
	echo Check Propagation $*
fi

dir1="$1"
shift

for dir2 in "$@"
do
	# compare adjacent pairs of directory trees

	echo "Checking \"$dir1\" \"$dir2\""
	diff -r "$dir1" "$dir2" 2> /dev/null

	if [ $? -ne 0 ]
	then
		if [ $reverse -eq 1 ]
		then
			echo Successful
			echo "---------"
			exit 0
		else
			echo "FAILED"
			echo "---------"
                	exit 1
		fi
        fi
        dir1="$dir2"
done

if [ $reverse -eq 1 ]
then
	echo FAILED
	echo "---------"
	exit -1
else
	echo Successful
	echo "---------"
	exit 0
fi
