    chgrp -fileid [id groupid] [list $fh1 $fh2]
    close $fh1
    close $fh2
    list [GetGID CHMOD.TMP] [GetGID CHMOD2.TMP]
} [list $myGID $myGID]

test chmod-8.1 {chgrp error tests} {
    list [catch {chgrp} msg] $msg
} {1 {wrong # args: chgrp [-fileid] group filelist}}

