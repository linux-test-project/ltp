test chartype-1.39 {ctype ord tests} {
    ctype ord \277
} [charToNum \277]

test chartype-1.40 {ctype ord tests} {
    ctype char 255
} [numToChar 255]

test chartype-1.41 {ctype ord tests} {
    ctype char 1722
} [numToChar 1722]

# cleanup
::tcltest::cleanupTests
