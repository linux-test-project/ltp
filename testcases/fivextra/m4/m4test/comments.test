#!/bin/sh

# comments.test is part of the GNU m4 testsuite

#. ${srcdir}/defs

cat ${srcdir}/comments.m4 >in

cat <<\EOF >ok
# An ordinary comment

# A comment in a macro
Macro foo expansion


# A *** Macro comment expansion *** in a macro
Macro foo expansion
EOF

M4PATH=$srcdir:$srcdir/../tests $M4 -d in >out 2>err
sed -e "s, $M4:, m4:," err >sederr && mv sederr err
$CMP -s out ok
